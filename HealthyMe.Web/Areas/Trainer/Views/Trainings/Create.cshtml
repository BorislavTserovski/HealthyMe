@model HealthyMe.Web.Areas.Trainer.Models.TrainingFormModel
@{
    ViewData["Title"] = "Create";
}
<h2 class="headerText">Create New Training</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label headerText"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="headerText"></label>
                <textarea asp-for="Description" class="form-control notes" style="width:100%" rows="30"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VideoUrl" class="control-label headerText"></label>
                <input asp-for="VideoUrl" class="form-control" placeholder="URL" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsForLoosingWeight" class="control-label headerText"></label>
                <input asp-for="IsForLoosingWeight" class="form-control" />
                <span asp-validation-for="IsForLoosingWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsForGainingWeight" class="control-label headerText"></label>
                <input asp-for="IsForGainingWeight" class="form-control" />
                <span asp-validation-for="IsForGainingWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MuscleGroup" class="control-label headerText"></label>
                <select asp-for="MuscleGroup" asp-items="Html.GetEnumSelectList<MuscleGroup>()" class="form-control"></select>
                <span asp-validation-for="MuscleGroup" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}