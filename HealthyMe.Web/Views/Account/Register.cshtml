@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="headerText">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4 class="headerText">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="headerText"></label>
                <input asp-for="Email" class="form-control" placeholder="E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="headerText"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="headerText"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="headerText"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-control">
                <label asp-for="Gender" class="headerText"></label>
                <select asp-for="Gender" style="color:black">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="headerText"></label>
                <input asp-for="Weight" class="form-control" type="number" value="60" required />
                <span asp-validation-for="Weight" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="headerText"></label>
                <input asp-for="Height" type="number" value="160" class="form-control" required />
                <span asp-validation-for="Height" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="headerText"></label>
                <input asp-for="Age" class="form-control" value="20" required />
                <span asp-validation-for="Age" class="form-text text-danger"></span>
            </div>
            <button type="submit" class="button btn-success"><span class="headerText">Register</span></button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}